{
  "name": "xloit/xloit-bridge-doctrine-dbal",
  "type": "library",
  "description": "Xloit Bridge Doctrine DBAL Library",
  "keywords": [
    "xloit",
    "doctrine",
    "library"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Yudha Setiawan",
      "email": "me@yudhasetiawan.com",
      "homepage": "http://yudhasetiawan.com/"
    }
  ],
  "autoload": {
    "psr-4": {
      "Xloit\\Bridge\\Doctrine\\DBAL\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-0": {
      "Xloit\\Bridge\\Doctrine\\DBAL\\Tests\\": "tests/"
    }
  },
  "suggest": {
    "xloit/xloit-datetime": "^0.0 to use date and time types",
    "zendframework/zend-json": "^2.6 || ^3.0 to use JSON type",
    "xloit/xloit-collection": "^0.1 to use parameter type using RecursiveCollection",
    "zendframework/zend-validator": "^2.9 to use Email and IP address types"
  },
  "require": {
    "php": "^5.4 || ^7.0",
    "doctrine/dbal": ">=2.4, <2.7",
    "xloit/xloit-exception": "^0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0",
    "xloit/xloit-datetime": "^0.0",
    "xloit/xloit-collection": "^0.1",
    "zendframework/zend-json": "^2.6 || ^3.0",
    "zendframework/zend-validator": "^2.9"
  }
}
